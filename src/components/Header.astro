---
import "./Header.css"
import Case from "../icons/Case.astro"
import CodeIcon from "../icons/CodeIcon.astro"
import HomeIcon from "../icons/HomeIcon.astro"
import LinkIcon from "../icons/LinkIcon.astro"
import SobreMiIcon from "../icons/SobreMiIcon.astro"

const navItems = [
{
    title: "Home",
    label: "home",
    url: "/#home",
    logo: HomeIcon,
  },
  
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
    logo: CodeIcon,
  },
  {
    title: "Experiencia",
    label: "experiencia",
    url: "/#experiencia",
    logo: Case ,
  },
  {
    title: "Sobre m√≠",
    label: "sobre-mi",
    url: "/#sobre-mi",
    logo: SobreMiIcon,
  },
  {
    title: "Contacto",
    label: "contacto",
    url: "/#contacto",
    logo: LinkIcon,
  },
]
---

<header class=" flex justify-center items-center p-3 w-full xl:w-[1120px] mx-auto">
    
    <nav class="headerMenu w-[90%] lg:w-[780px] flex flex-row justify-around gap-x-3 md:gap-x-6 md:px-6 lg:gap-x-10 lg:text-xl opacity-90 bg-grayolive-800/50 p-2 rounded-full">
        {
            navItems.map((link) => (
                <a class="relative block px-2 py-3 transition ease-in-out duration-300 hover:text-cruise-200 dark:hover:text-patina-300 text- " aria-label={link.label} href={link.url}> 

                {link.title}</a>
            ))
        }
       
    </nav>
    <nav class="menuLateral flex flex-col justify-center gap-3 bg-patina-800/50 px-1.5 py-2">
      {
        navItems.map((link) => (
            <a class=" hover:text-cruise-300 transition duration-300 hover:scale-105" aria-label={link.label} href={link.url}> 

            <link.logo/></a>
        ))
    }
    </nav>
</header>
